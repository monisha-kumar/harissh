
<h2 style="text-align: center">Employee Details</h2>
<table style="border:1px solid black;margin-left:auto;margin-right:auto;">
  <style>
      table, th, td {
          width: 35%;
          margin: auto;
          border: 2px solid black;
          border-collapse: collapse;

      }

  </style>
  <tbody>
  <tr>
    <th>Name:</th>
    <td><%= @employee.detail.name %></td>
  </tr>
  <tr>
    <th>Date of Birth:</th>
    <td><%= @employee.detail.dob %></td>
  </tr>
  <tr>
    <th>Phone number:</th>
    <td><%= @employee.detail.ph_no %></td>
  </tr>
  <tr>
    <th>Email:</th>
    <td><%= @employee.detail.email %></td>
  </tr>

  <tr>
    <th>Mother's Name:</th>
    <td><%= @employee.detail.m_name %></td>
  </tr>
  <tr>
    <th>Father's Name:</th>
    <td><%= @employee.detail.f_name %></td>
  </tr>
  <tr>
    <th>Address:</th>
    <td><%= @employee.detail.address %></td>
  </tr>
  <tr>
    <th>Experience:</th>
    <td><%= @employee.detail.experience%></td>
  </tr>

  </tbody>
</table>
<p style="text-align: center">
<td> <button><%= link_to 'Edit', edit_detail_path(@employee.id), class:"btn btn-secondary"%> </button></td>
</p>
