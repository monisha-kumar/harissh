<%= form_with(model: @detail, method: :put, local: true)do |f| %>
  <font color="#f5f5f5"><h1 style="text-align: center"> Personal Details</h1></font>

  <div class="form-outline form-white mb-4">
    <p style="text-align: center">
      <font color="#f5f5f5">
      <%= f.label :name %><br /> </font>
    <%= f.text_field :name,required:true,class:"form-label form-control form-control-lg", placeholder: "Name"  %>
    </p>
  </div>


  <div class="form-outline form-white mb-4">

    <p style="text-align: center">
      <font color="#f5f5f5">
        <%= f.label :phone_number %><br /></font>
    <%= f.text_field :ph_no,required:true, class:"form-label form-control form-control-lg", placeholder: "Phone number"%>
    </p>
  </div>


  <div class="form-outline form-white mb-4">
    <p style="text-align: center">
      <font color="#f5f5f5">
        <%= f.label :dob %><br /></font>
      <%= f.text_field :dob, required:true,class:"form-label form-control form-control-lg", placeholder: "dob"%>
    </p>
  </div>

  <div class="form-outline form-white mb-4">
    <p style="text-align: center">
      <font color="#f5f5f5">
        <%= f.label :email %><br /></font>
    <%= f.email_field :email,required:true, class:"form-label form-control form-control-lg", placeholder: "email"%>
    </p>
  </div>

  <div class="form-outline form-white mb-4">
    <p style="text-align: center">
    <%= f.label :experience %><br />
    <%= f.text_field :experience,required:true, class:"form-label form-control form-control-lg", placeholder: "Experience"%>
    </p>
  </div>

  <div class="form-outline form-white mb-4">
    <p style="text-align: center">
    <%= f.label :Father_Name %><br />
    <%= f.text_field :f_name,required:true, class:"form-label form-control form-control-lg", placeholder: "Father's name"%>
    </p>
  </div>

  <div class="form-outline form-white mb-4">
    <p style="text-align: center">
    <%= f.label :Mother_Name %><br />
    <%= f.text_field :m_name,required:true, class:"form-label form-control form-control-lg", placeholder: "Mother's name"%>
    </p>
  </div>

  <div class="form-outline form-white mb-4">
    <p style="text-align: center">
    <%= f.label :Address %><br />
    <%= f.text_field :address,required:true, class:"form-label form-control form-control-lg", placeholder: "Address"%>
    </p>
  </div>

  <div class="actions">
    <p style="text-align: center">
    <%= f.submit  %>
    </p>
  </div>
<% end %>
<br>
<br>
<p>
  <button><%= link_to 'Prev Page', :back, type:"button", class:"btn btn-primary" %></button>
</p>








