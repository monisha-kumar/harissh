<% @approval.each do|approve| %>

<font color="#f5f5f5"> <h1 style="text-align: center"> Leave Status</h1></font><br>
  <br>
 <font color="#f5f5f5"> <h1 style="text-align: center"> <%=Employee.find(approve.employee_id).detail.name %></h1></font>

  <%unless @approval.empty? %>

    <%=form_tag({controller: "approval",action: "update" }, method: "put") do %>
<font color="#f5f5f5">

    <p style="text-align: center"><strong>Leave_type : </strong><%=approve.type_of_leave %></p>
    <p style="text-align: center"><strong>From date : </strong><%=approve.from_date %></p>
    <p style="text-align: center"><strong>To date : </strong><%=approve.to_date %></p>
    <p style="text-align: center"><strong>Number of days : </strong><%=approve.days %></p>
</font>
      <p style="text-align: center"> <%=hidden_field_tag :employee_id,approve.employee_id %></p>
      <p style="text-align: center"> <%= select_tag(:approval_status, options_for_select([["Approve","Approved"],["Deny","Denied"]], params[:approval_status] ), class:"select") %></p>

 <br>
      <p style="text-align: center"> <%= submit_tag "okay" %></p>
<%end %>
<%end %>
<%end %>