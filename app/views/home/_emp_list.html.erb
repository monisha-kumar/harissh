
<font color="#f5f5f5"> <h2 style="text-align: center"> Employee Listing Page</h2> </font>
<button><%=link_to 'leave approval', 'approval/dashboard' %></button>
<table style = "width:40%",  border="2" style="border-collapse:collapse">
   <style>
       table, th, td{
           width: 35%;
           margin: auto;
           border: 2px solid black;
           border-collapse: collapse;
           background-color:lightblue;
       }

   </style>
  <style>
      body {
          background-image: url('https://shiftin.app/wp-content/uploads/2021/10/what-are-employee-management-systems.jpg');
          background-repeat: no-repeat;
          background-attachment: fixed;
          background-size: cover;
      }
  </style>
 <thead>
  <tr>
    <th>emp_id</th>
    <th>Name</th>
    <th>Address</th>
    <th>Email</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>

  <tbody>
<% @employees.each do |employee| %>

    <tr>
      <td><%= employee.detail.employee_id %> </td>
      <td><%= employee.detail.name %> </td>
      <td> <%= employee.detail.address %> </td>
      <td> <%= employee.detail.email %> </td>
      <td> <button><%= link_to 'View', detail_path(employee.id), class:"btn btn-success"%> </button></td>
<!--      <td> <button><%#= link_to 'Edit', edit_detail_path(employee.id), class:"btn btn-info"%></button> </td>-->
      <td> <%= button_to 'Delete', detail_path(employee), method: :delete, class:"btn btn-danger" %> </td>
    </tr>


<% end %>
  </tbody>
</table>
